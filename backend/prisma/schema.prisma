generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  email       String   @unique
  password    String
  createdAt   DateTime @default(now())
  
  invitation  Invitation?
}

model Invitation {
  id        Int      @id @default(autoincrement())
  
  userId    Int      @unique
  
  template  String
  bride     String?
  groom     String?
  date      String?
  message   String?
  
  user      User     @relation(fields: [userId], references: [id])
}
